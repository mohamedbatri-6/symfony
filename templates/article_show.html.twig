{# templates/dashboard/article_show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détails de l'article{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #74ebd5, #acb6e5);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .article-container {
            background: #ffffff;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 900px;
        }

        .article-container h1 {
            font-size: 2rem;
            color: #333;
            text-align: center;
            margin-bottom: 1rem;
            font-weight: bold;
        }

        .article-container p {
            font-size: 1.1rem;
            color: #555;
        }

        .article-container .content {
            background-color: #f9f9f9;
            padding: 1.5rem;
            border-radius: 8px;
            margin-top: 1rem;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.05);
        }

        .btn-secondary {
            background-color: #f0f0f0;
            border: none;
            color: #333;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 600;
            transition: background-color 0.3s ease-in-out;
            display: block;
            width: 100%;
            margin-top: 1.5rem;
        }

        .btn-secondary:hover {
            background-color: #ddd;
        }

        .extra-links {
            text-align: center;
            margin-top: 1rem;
        }

        .extra-links a {
            color: #4cb1c9;
            text-decoration: none;
            font-weight: 600;
        }

        .extra-links a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="article-container">
        <h1>{{ article.title }}</h1>
        <p><strong>Publié le :</strong> {{ article.createdAt|date('d/m/Y H:i') }}</p>

        <div class="content">
            <p><strong>Contenu :</strong></p>
            <div>{{ article.content|raw }}</div>
        </div>

        <a href="{{ path('dashboard') }}" class="btn btn-secondary">Retour au tableau de bord</a>
    </div>

    <div class="extra-links">
        <p><a href="{{ path('dashboard') }}">Retourner à la liste des articles</a></p>
    </div>
{% endblock %}
